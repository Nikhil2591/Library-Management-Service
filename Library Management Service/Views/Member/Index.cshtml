@using Library.Management.Service.Model.Member
@model Library.Management.Service.Model.Member.MemberIndexModel

@{
    ViewBag.Title = "Member Index";

}

<h3>@ViewBag.Title</h3>
<div id="memberIndex">
    <table class="mdl-data-table mdl-js-data-table mdl-data-table--selectable mdl-shadow--2dp customTable" id="memberIndexTable">
        <thead>
            <tr>
                <th>Profile Link</th>
                <th>Last Name</th>
                <th>First Name</th>
                <th>Library Card Id</th>
                <th>Overdue Fees</th>
                <th>Home Library</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var member in Model.Members)
            {
                <tr>
                    <td><a asp-controller="Member" asp-action="Detail" asp-route-id="@member.Id">(Profile)</a></td>
                    <td>@member.LastName</td>
                    <td>@member.FirstName</td>
                    <td>@member.LibraryCardId</td>
                    <td>@member.OverdueFees</td>
                    <td>@member.HomeLibraryBranch</td>
                </tr>
            }
        </tbody>
    </table>

</div>
